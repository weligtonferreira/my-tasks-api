generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  tasks Task[]

  @@map("users")
}

model Task {
  id          String @id @default(uuid())
  title       String
  description String
  userId      String @map("user_id")

  User User @relation(fields: [userId], references: [id])

  @@map("tasks")
}
